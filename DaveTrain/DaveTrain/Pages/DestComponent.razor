@inject NavigationManager NavigationManager
@page "/destination"
<div class="container2">
    <h3 class="g11">Passenger:</h3>
    <select class="g12">
        <option value="Kam">Kam</option>
        <option value="Dave">Dave</option>
        <option value="Ben">Ben</option>
        <option value="Steve">Steve</option>
    </select>
    <h3 class="g14">Destination:</h3>
    <select class="g15">
        <option value="ChickFla">ChickFla</option>
        <option value="Subway">Subway</option>
        <option value="Chedders">Chedders</option>
        <option value="Chipotle">Chipotle</option>
        <option value="PDQ">PDQ</option>
        <option value="PDQ">Fire House</option>
    </select>

    <button class="g16 btn-danger" @onclick="OnSubmit">
        Submit
    </button>

